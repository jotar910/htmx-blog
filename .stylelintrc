{
    "extends": [
        "stylelint-config-standard-scss",
        "stylelint-config-tailwindcss"
    ],
    "ignoreFiles": [
        "node_modules/*",
        "public/htmx/*",
        "**/*.ts"
    ],
    "rules": {
        "scss/at-rule-no-unknown": [
            true,
            {
                "ignoreAtRules": [
                    "tailwind",
                    "apply",
                    "variants",
                    "responsive",
                    "screen"
                ]
            }
        ],
        "declaration-block-trailing-semicolon": null,
        "no-descending-specificity": null
    }
}
